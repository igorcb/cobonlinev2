<p id="notice"><%= notice %></p>

<h3>Dados do lancamento do caixa</h3>

<p>
  <strong><%= CurrentAccount.human_attribute_name('city') %>:</strong>
  <%= @current_account.city.name %>
</p>

<p>
  <strong><%= CurrentAccount.human_attribute_name('cost') %>:</strong>
  <%= @current_account.cost.name %>
</p>

<p>
  <strong><%= CurrentAccount.human_attribute_name('date_ocurrence') %>:</strong>
  <%= date_br(@current_account.date_ocurrence) %>
</p>

<p>
  <strong><%= CurrentAccount.human_attribute_name('type') %>:</strong>
  <%= @current_account.credito_debito %>
</p>

<p>
  <strong><%= CurrentAccount.human_attribute_name('price') %>:</strong>
  <%= @current_account.price %>
</p>

<p>
  <strong><%= CurrentAccount.human_attribute_name('historic') %>:</strong>
  <%= @current_account.historic %>
</p>

<%= link_to t("edit"), edit_current_account_path(@current_account), class: "btn btn-primary btn-sm btn-block" %>
<% if current_user.admin? %> 
  <%= link_to t("back"), current_accounts_path, class: "btn btn-default btn-sm btn-block" %>
<% else %>
  <%= link_to t("back"), index_user_operator_current_accounts_path, class: "btn btn-default btn-sm btn-block" %>
<% end %>
