
<p id="notice"><%= notice %></p>

<h3>Dados do Emprestimo</h3>

<p>
  <strong><%= Advance.human_attribute_name('city') %>:</strong>
  <%= @advance.client.city.name %>
  -
  <strong><%= Advance.human_attribute_name('client') %>:</strong>
  <%= @advance.client.name %>
</p>

<p>
  <strong><%= Advance.human_attribute_name('date_advance') %>:</strong>
  <%= date_br(@advance.date_advance) %>
</p>

<p>
  <strong><%= Advance.human_attribute_name('price') %></strong>
  <%= @advance.price %>
  -
  <strong><%= Advance.human_attribute_name('balance') %>:</strong>
  <%= @advance.balance %>
  -
  <strong><%= Advance.human_attribute_name('payd') %>:</strong>
  <%= @advance.payd %>
</p>

<p>
  <strong><%= Advance.human_attribute_name('number_parts') %>:</strong>
  <%= @advance.number_parts %>
  -
  <strong><%= Advance.human_attribute_name('percent') %>:</strong>
  <%= @advance.percent %>
</p>

<p>
  <strong>Status:</strong>
  <%= @advance.name_status %>
</p>

<%= link_to t('edit'), edit_advance_path(@advance) %> |
<%= link_to t('recalculation'), recalculation_path(@advance) %> |
<%= link_to t('back'), advances_path %>
<hr/>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Advance.human_attribute_name('parts') %></th>
      <th><%= Advance.human_attribute_name('due_date') %></th>
      <th><%= Advance.human_attribute_name('price') %></th>
      <th><%= Advance.human_attribute_name('date_payment') %></th>
      <th><%= Advance.human_attribute_name('value_payment') %></th>
      <th><%= Advance.human_attribute_name('dalay') %></th>
      <th><%= Advance.human_attribute_name('note') %></th>
      <th><%= Advance.human_attribute_name('options') %></th>
    </tr>
  </thead>

  <tbody>
    <% @advance.item_advances.order_asc.each do |item| %>
      <tr>
        <td><%= item.parts %></td>
        <td><%= date_br(item.due_date) %></td>
        <td><%= item.price %></td>
        <td><%= date_br(item.date_payment) %></td>
        <td><%= item.value_payment %></td>
        <td><%= item.dalay %></td>
        <td><%= item.note %></td>
        <td>
          <%= link_to Advance.human_attribute_name('edit'), edit_item_advance_path(item), style: 'text-decoration: none;' if item.due_date <= Date.current && item.date_payment.present? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
