<h1><%= t(".title") %></h1>

<%= link_to t(".new"), new_type_trade_path, class: "btn btn-primary btn-block" %> <br />

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= TypeTrade.human_attribute_name('name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @type_trades.each do |type_trade| %>
      <tr>
        <td><%= type_trade.name %></td>
        <td><%= link_to t('show'), type_trade %></td>
        <td><%= link_to t('edit'), edit_type_trade_path(type_trade) %></td>
        <td><%= link_to t('destroy'), type_trade, data: {turbo_method: :delete, turbo_confirm: t("confirm")} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

