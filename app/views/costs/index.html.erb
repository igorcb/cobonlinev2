<h1><%= t(".title") %></h1>

<%= link_to t(".new"), new_cost_path, class: "btn btn-primary btn-block" %> <br />

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Cost.human_attribute_name('name') %></th>
      <th colspan="3"><%= t(".option") %></th>
    </tr>
  </thead>

  <tbody>
    <% @costs.each do |cost| %>
      <tr>
        <td><%= cost.name %></td>
        <td><%= link_to t('show'), cost %></td>
        <td><%= link_to t('edit'), edit_cost_path(cost) %></td>
        <td><%= link_to t('destroy'), cost, data: {turbo_method: :delete, turbo_confirm: t("confirm")} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

