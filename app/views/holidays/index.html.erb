<p id="notice"><%= notice %></p>

<h1><%= t(".title") %></h1>

<%= link_to t(".new"), new_holiday_path, class: "btn btn-primary btn-block" %> <br />

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Holiday.human_attribute_name('name') %></th>
      <th><%= Holiday.human_attribute_name('date_holiday') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holidays.each do |holiday| %>
      <tr>
        <td><%= holiday.name %></td>
        <td><%= date_br(holiday.date_holiday) %></td>
        <td><%= link_to t('show'), holiday %></td>
        <td><%= link_to t('edit'), edit_holiday_path(holiday) %></td>
        <td><%= link_to t('destroy'), holiday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

