        </div>

        <div class="m-3">
          <%= f.label :indication %><br>
          <%= f.text_field :indication, {class: "form-control"} %>
        </div>

        <div class="m-3">
          <%= f.label :status %><br>
          <%= f.text_field :status, {class: "form-control"} %>
        </div>
      </div>

      <div class="tab-pane fade" id="home_address">
        <div class="m-3 row g-3">
          <div class="col-sm-9">
            <%= f.label :home_address, "Address" %><br>
            <%= f.text_field :home_address, {class: "form-control", placeholder: "Address", aria: { label: "Home Address" }} %>
          </div>

          <div class="col-sm">
            <%= f.label :home_number, "Number" %><br>
