          </div>

          <div class="col-sm-4">
            <%= f.label :references_three_phone, "Phone" %><br>
            <%= f.text_field :references_three_phone, {class: "form-control", placeholder: "Phone", aria: { label: "References Three Phone" }} %>
          </div>

        </div>
      </div>
    </div>
  </div>


  <div class="form-group">
    <%= f.submit class: 'btn btn-primary btn-block'  %>
    <%= link_to t('back'), clients_path, class: 'btn btn-default btn-block' %>
  </div>
<% end %>
