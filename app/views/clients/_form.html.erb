          </div>

          <div class="col-sm-3">
            <%= f.label :billing_state, "State" %><br>
            <%= f.text_field :billing_state, {class: "form-control", placeholder: "State", aria: { label: "Billing State" }} %>
          </div>

          <div class="col-sm-3">
            <%= f.label :billing_zip, "Zip-Code" %><br>
            <%= f.text_field :billing_zip, {class: "form-control", placeholder: "Zip-Code", aria: { label: "Billing Zip-Code" }} %>
          </div>

          <div class="col-sm-12">
            <%= f.label :billing_link, "Link" %><br>
            <%= f.text_field :billing_link, {class: "form-control", placeholder: "Link", aria: { label: "Billing Link Address" }} %>
          </div>
        </div>
      </div>

      <div class="tab-pane fade" id="references">
        <div class="m-3 row g-3">
          <div class="col-sm-4">
            <%= f.label :references_one_name, "Nome" %><br>
            <%= f.text_field :references_one_name, {class: "form-control", placeholder: "Nome", aria: { label: "References One Name" }} %>
