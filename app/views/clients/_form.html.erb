          </div>

          <div class="col-sm-7">
            <%= f.label :home_district, "District" %><br>
            <%= f.text_field :home_district, {class: "form-control", placeholder: "District", aria: { label: "Home District" }} %>
          </div>

          <div class="col-sm-6">
            <%= f.label :home_city, "City" %><br>
            <%= f.text_field :home_city, {class: "form-control", placeholder: "City", aria: { label: "Home City" }} %>
          </div>

          <div class="col-sm-3">
            <%= f.label :home_state, "State" %><br>
            <%= f.text_field :home_state, {class: "form-control", placeholder: "State", aria: { label: "Home State" }} %>
          </div>

          <div class="col-sm-3">
