<div class="row">
  <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
    <div class="card border-0 shadow rounded-3 my-5">
      <div class="card-body p-4 p-sm-5">
        <h5 class="card-title text-center mb-5 fw-light fs-5"><%= t('sign_in') %></h5>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-floating mb-3">
            <%= f.email_field :email, class: "form-control", id: "floatingInput", autofocus: true %>
            <%= f.label :email %>
          </div>
          
          <div class="form-floating mb-3">
            <%= f.password_field :password, class: "form-control", id: "floatingPassword" %>
            <%= f.label :password %>
          </div>

          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" value="" id="rememberPasswordCheck">
            <label class="form-check-label" for="rememberPasswordCheck">
              <%= t('remember_password') %>
            </label>
          </div>
          <div class="d-grid mb-3">
            <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit"><%= t('login') %></button>
          </div>
          <div class="d-flex align-items-center justify-content-between">
            <div>
              <%= link_to t('sign_up'), new_registration_path(resource_name) %>
            </div>
            <div>
              <%= link_to t('forgot_password'), new_password_path(resource_name) %>
            </div>
            <%#= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
