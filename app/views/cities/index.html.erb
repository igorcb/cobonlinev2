<h1><%= t(".title") %></h1>

<%= link_to t(".new"), new_city_path, class: "btn btn-primary btn-block" %> <br />

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= City.human_attribute_name('name') %></th>
      <th><%= City.human_attribute_name('geral') %></th>
      <th colspan="3"><%= t(".option") %></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.geral %></td>
        <td><%= link_to t('show'), city %></td>
        <td><%= link_to t('edit'), edit_city_path(city) %></td>
        <td><%= link_to t('destroy'), city, data: {turbo_method: :delete, turbo_confirm: t("confirm")} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

